<br>
<section>
  <%= link_to gravatar_for(feed_item.pushable ), feed_item.pushable %>
  <span>
    <%= link_to feed_item.pushable.name, feed_item.pushable %>
  </span>
  <span class="content">&raquo; <%= feed_item.content %></span>
  <span class="timestamp"><sup> {
    Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
    }</sup>
  </span>
  
    <% if current_designer?(feed_item.pushable) %>
    <%= link_to "delete", feed_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: feed_item.content %>
  <% end %>
</section>